{
  "openapi": "3.0.1",
  "info": {
    "title": "Email Service",
    "version": "1.0.0"
  },
  "paths": {
    "/welcome-email": {
      "post": {
        "summary": "Send welcome email",
        "operationId": "sendWelcomeEmail",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": { "type": "string" },
                  "email": { "type": "string" }
                },
                "required": ["userId", "email"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email sent",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
